  <body>
    <main>
      <div class="crop-image-popup">
        <img id="blah-popup" src="{{img}}" name="img" alt="your image" />
        <div class="btn-option">
          <button class="button btn-get-image" type="button">Get result</button>
          <button class="button btn-cancel" type="button">Cancel</button>
        </div>
      </div>

      <div id="card">
        <form action="/generator" method="post">
          <div class="card-image">
            <input
              class="img-input-file"
              type="file"
              onchange="readURL(this);"
              name="img"
              accept="image/*"
            />

            <img id="blah" src="{{img}}" name="img" alt="your image" />
          </div>

          <div class="card-info">
            <label for="name">Name</label>
            <input id="name" type="text" name="name" value="{{name}}" />
            <label for="date-of-birth">Date of Birth</label>
            <input
              id="date-of-birth"
              class="date-of-birth"
              type="text"
              name="date-of-birth"
              value="{{name}}"
            />
            <label for="place-of-issue">Place of issue</label>
            <input
              id="place-of-issue"
              class="place-of-issue"
              type="text"
              name="place-of-issue"
              value="{{name}}"
            />
            <label for="date-of-issue">Date of Issue</label>
            <input
              id="date-of-issue"
              class="date-of-issue"
              type="text"
              name="date-of-issue"
              value="{{name}}"
            />
            <button class="button btn-submit" type="button">Submit</button>
          </div>
        </form>
      </div>
      <button class="button btn-download" type="button">down</button>
